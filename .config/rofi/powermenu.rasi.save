* {
	background-color: #2b2e35;
}

window {
	border-radius: 20px;
	location: center;
	anchor: center;
	border: 4px;
	border-color: #98c379;
	
}

inputbar {
	enabled: false;
}

listview {
	lines: 1;
	columns: 5;
	layout: vertical;
	background-color: #2b2e35;
	margin: 50px;
	cylce: true;
	fixed-columns: true;
}

element {
	padding: 10px;
}

element-text {
	color: #ffffff;
}

element selected.normal {
	border: 2px;
	border-color: #98c379;
	border-radius: 50px;
}

