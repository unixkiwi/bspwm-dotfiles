* {
	background-color: #2b2e35;
	font: "Font Awesome 48";
}

window {
	border-radius: 20px;
	location: center;
	anchor: center;
	border: 4px;
	border-color: #98c379;
	height: 580px;
	width: 200px;
}

inputbar {
	enabled: false;
}

listview {
	background-color: #2b2e35;
	margin: 10px;
	cylce: true;
}

element {
	padding: 10px;
}

element-text {
	color: #ffffff;
	horizontal-align: 0.5;
}

element selected.normal {
	border: 2px;
	border-color: #98c379;
	border-radius: 50px;
}

